
# .replit
modules = ["nodejs-20", "web"]   # brings back Node 20 + npm for the shell and runner
run = "npm run dev"

language = "nodejs"
entrypoint = "server/index.ts"

[nix]
channel = "stable-24_05"

[unit]
type = "web"

[[ports]]
localPort = 3000
externalPort = 80


[workflows]

[[workflows.workflow]]
name = "Start Application"
mode = "parallel"
author = 49270312

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[deployment]
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "npm start"]
deploymentTarget = "cloudrun"

[[deployment.healthChecks]]
path = "/health"